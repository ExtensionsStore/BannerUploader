<?xml version="1.0"?>
<!--
/**
 * ExtensionsStore_BannerUploader config
 *
 * @category   ExtensionsStore
 * @package    ExtensionsStore_BannerUploader
 * @author     ExtensionsStore <Extensions Store <admin@extensions-store.com>>
 */
-->
<config>
    <modules>
        <ExtensionsStore_BannerUploader>
            <version>1.2.0</version>
        </ExtensionsStore_BannerUploader>
    </modules>
    <phpunit>
        <suite>
            <modules>
                <ExtensionsStore_BannerUploader />
            </modules>
        </suite>
    </phpunit>  
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <banneruploader before="Mage_Adminhtml">ExtensionsStore_BannerUploader_Adminhtml</banneruploader>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>    
    <adminhtml>  
    	<events>
            <cms_wysiwyg_config_prepare>
                <observers>
                    <extensions_store_banneruploader_prepare_wysiwyg_plugin_config>
                        <class>extensions_store_banneruploader/observer</class>
                        <method>prepareWysiwygPluginConfig</method>
                    </extensions_store_banneruploader_prepare_wysiwyg_plugin_config>
                </observers>
            </cms_wysiwyg_config_prepare>    
            <adminhtml_block_html_before>
                <observers>
                    <extensions_store_banneruploader_add_template_fields>
                        <class>extensions_store_banneruploader/observer</class>
                        <method>addTemplateFields</method>
                    </extensions_store_banneruploader_add_template_fields>
                </observers>
            </adminhtml_block_html_before>    
            <enterprise_banner_save_after>
                <observers>
                    <extensions_store_banneruploader_save_template>
                        <class>extensions_store_banneruploader/observer</class>
                        <method>saveTemplate</method>
                    </extensions_store_banneruploader_save_template>
                </observers>
            </enterprise_banner_save_after>                             		
            <enterprise_banner_save_after>
                <observers>
                    <extensions_store_banneruploader_save_background_style>
                        <class>extensions_store_banneruploader/observer</class>
                        <method>saveBackgroundStyle</method>
                    </extensions_store_banneruploader_save_background_style>
                </observers>
            </enterprise_banner_save_after>                        
    	</events>
        <layout>
            <updates>
                <extensions_store_banneruploader>
                    <file>extensions_store/banneruploader.xml</file>
                </extensions_store_banneruploader>
            </updates>
        </layout>     	
    </adminhtml>    
    <global> 
        <blocks>
            <extensions_store_banneruploader>
                <class>ExtensionsStore_BannerUploader_Block</class>
            </extensions_store_banneruploader>       
            <banneruploader>
                <class>ExtensionsStore_BannerUploader_Block</class>
            </banneruploader>                   
        </blocks>             
        <helpers>
            <extensions_store_banneruploader>
                <class>ExtensionsStore_BannerUploader_Helper</class>
            </extensions_store_banneruploader>        
            <banneruploader>
                <class>ExtensionsStore_BannerUploader_Helper</class>
            </banneruploader>        
        </helpers>          
        <models>
            <extensions_store_banneruploader>
                <class>ExtensionsStore_BannerUploader_Model</class>
                <resourceModel>extensions_store_banneruploader_resource</resourceModel>
            </extensions_store_banneruploader> 
            <extensions_store_banneruploader_resource>
                <class>ExtensionsStore_BannerUploader_Model_Resource</class>
                <entities>
                    <template>
                        <table>extensions_store_banneruploader_template</table>
                    </template>
                    <banner>
                        <table>extensions_store_banneruploader_banner</table>
                    </banner>                    
                </entities>
            </extensions_store_banneruploader_resource>
        </models> 
		<resources>
			<extensions_store_banneruploader_setup>
				<setup>
					<module>ExtensionsStore_BannerUploader</module>
					<class>Mage_Core_Model_Resource_Setup</class>
				</setup>
			</extensions_store_banneruploader_setup>
			<connection>
				<use>core_setup</use>
			</connection>
		</resources>                 
    </global>         
</config>